green = #566f44
background = #e8e8e8
box-color = #fff

body, html
	background-color background
	min-width 360px
	font-family 'Merriweather', serif

h1, h2, h3, h4, h5, h6
	font-family 'Open Sans', sans-serif

a, a:link
	cursor pointer

.banner-box
	display block
	position absolute
	width 360px
	text-align center
	padding-top 7px
	background green
	background rgba(green, .7)
	color #fff

.banner-title
	position absolute
	bottom 20px
	right 60px
	text-align right
	h2
		font-family 'Great Vibes', sans-serif
		font-size 6em
		margin-bottom -8px
		color green
		text-shadow 0 0 8px rgba(#fff, .4)
	p
		font-size 2em

.banner-img
	display block
	width 100%
	height 300px
	background-image url('http://placehold.it/1140x300.png/09f/adf')
	background-repeat no-repeat
	background-position 50% 50%
	background-size cover

@media (max-width: 768px)
	.banner-box
		width 95%
		width calc(100% - 30px)

	.banner-title
		h2
			font-size 4em
		p
			font-size 1.5em

.box
	background-color box-color
	padding 10px
	margin-bottom 20px
	border-radius 4px
	h1, h2
		color green
		&:first-child
			margin-top 2px
	&.extra
		background-color #566f44
		h2
			color box-color
		img
			width 100%
			margin 10px 0

table
	tfoot, tbody
		th
			border-top 1px solid #DDD

footer
	padding-bottom 30px
	background-color green
	color #fff !important
